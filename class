class Human:
    def __init__(self,n,o):
        self.name=n
        self.occupation=o
    def do_work(self):
        if self.occupation=="tennis":
            print(self.name,"Player of tennis")
        elif self.occupation=="Actor":
            print(self.name,"it ia Actor")
    def speaks(self):
        print(self.name,"Say how are you")
        
a=Human("Aniket","tennis")
b=Human("Aniket","Actor")
a.do_work()
a.speaks()
b.do_work()
b.speaks()


