#function With more than one input 


def my_fun(name,location):
    print(f"My name is {name}")
    print(f"I am from{location}")
my_fun("aniket","kopergaon")



#------------------------------------------------------------------------------------------


def my_fun(name,location):
    print(f"My name is {name}")
    print(f"I am from{location}")
my_fun(location="kopergaon",name="aniket")



