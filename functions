#Calculet number of cans needs

import math
def paint(hight,width,cover):
    num_cans=(hight*width)/cover
    round_can=math.ceil(num_cans)
    print(f"you need {round_can}")
test_h=int(input("Enter hight"))
test_w=int(input("Enter width"))
coverage=5
paint(hight=test_h,width=test_w,cover=coverage)


